<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>webmon.HelloWorldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignUp</servlet-name>
        <servlet-class>webmon.SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogIn</servlet-name>
        <servlet-class>webmon.LogInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Error</servlet-name>
        <servlet-class>webmon.ErrorServlet</servlet-class>
    </servlet>
	
	<servlet>
		<servlet-name>Jersey REST Service</servlet-name>
		<servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
		<init-param>
	        <param-name>com.sun.jersey.spi.container.ContainerRequestFilters</param-name>
	        <param-value>webmon.filters.AuthorizationFilter</param-value>
	    </init-param>
		<init-param>
			<param-name>jersey.config.server.provider.packages</param-name>
			<param-value>webmon</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>SignUp</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LogIn</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Jersey REST Service</servlet-name>
		<url-pattern>/webmon/*</url-pattern>
	</servlet-mapping>
	
	<!-- Any other URLs should result in an error -->
	<servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>  
    	<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
</web-app>
